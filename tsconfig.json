{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "lib": ["DOM", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "target": "ES2018",
    "jsx": "react",
    "jsxFactory": "preact.h",
    "pretty": true,
    "declaration": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "esModuleInterop": true,
    "outDir": "lib",
    "rootDir": "src"
  },
  "include": ["src/**/*"]
}
